{% if item.fromZones is defined %}
<from>
{% for fromZone in item.fromZones %}
	<member>{{ fromZone }}</member>
{% endfor %}
</from>
{% else %}
<from>
	<member>any</member>
</from>
{% endif %}

{% if item.toZones is defined %}
<to>
{% for toZone in item.toZones %}
	<member>{{ toZone }}</member>
{% endfor %}
</to>
{% else %}
<to>
	<member>any</member>
</to>
{% endif %}

{% if item.sources is defined %}
<source>
{% for source in item.sources %}
	<member>{{ source }}</member>
{% endfor %}
</source>
{% else %}
<source>
	<member>any</member>
</source>
{% endif %}

{% if item.destinations is defined %}
<destination>
{% for destination in item.destinations %}
	<member>{{ destination }}</member>
{% endfor %}
</destination>
{% else %}
<destination>
	<member>any</member>
</destination>
